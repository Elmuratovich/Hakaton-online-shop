@model Project.Models.ViewModel.GetAllProductsViewModel
@{
    Layout = null;
}


@for (int i = 0; i < Model.Products.Count(); i++)
{
    <tr>
        <td>
            <div class="imgProduct">
                <img src="~/lib/img/fut.jpg" class="img-css" />
            </div>
        </td>
        <td>
            <div>
                <b>@Model.Products[i].name</b> <br />
                @Model.Products[i].description
            </div>
        </td>
        <td>@Model.Products[i].price</td>
        <td>@Model.Products[i].created.ToString("dd/MM/yyyy")</td>
    </tr>
}


